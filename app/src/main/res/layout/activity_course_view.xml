<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CourseView">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/holo_green_dark"
        android:singleLine="true"
        android:text="Course List"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:gravity="center"
        android:id="@+id/textView"
        />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/courseListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:layout_marginBottom="@dimen/abc_action_bar_default_height_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/courseListView"
        android:layout_alignStart="@+id/courseListView"
        android:text="Add Course"
        android:id="@+id/addCourseButton"
         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate GPA"
        android:id="@+id/calcGPAButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/courseListView"
        android:layout_alignEnd="@+id/courseListView"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

</RelativeLayout>
