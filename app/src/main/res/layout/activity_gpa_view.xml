<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/holo_green_dark"
        android:singleLine="true"
        android:text="Results"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:gravity="center"
        android:id="@+id/addCourseTitle"
        />

    <TextView
        android:text="GPA:"
        android:id="@+id/gpaLabel"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/gpaTxt"
        android:textSize="22sp"
        android:layout_alignRight="@id/gpaLabel"
        android:layout_alignEnd="@id/gpaLabel"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/gpaLabel"
        android:layout_height="wrap_content"
        android:text="Quality Points:"
        android:id="@+id/qualPointsLabel"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/qualPtsTxt"
        android:textSize="22sp"
        android:layout_below="@id/gpaLabel"
        android:layout_alignRight="@id/qualPointsLabel"
        android:layout_alignEnd="@id/qualPointsLabel"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:layout_below="@id/qualPointsLabel"
        android:text="Cumulative GPA:"
        android:id="@+id/cumGPALabel"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:layout_below="@id/qualPointsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/cumGPAtxt"
        android:textSize="22sp"
        android:layout_alignRight="@id/cumGPALabel"
        android:layout_alignEnd="@id/cumGPALabel"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/cumGPALabel"
        android:layout_height="wrap_content"
        android:text="Quality Points:"
        android:id="@+id/allQualPtsLabel"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/cumQualPtsTxt"
        android:textSize="22sp"
        android:layout_below="@id/cumGPALabel"
        android:layout_alignRight="@id/qualPointsLabel"
        android:layout_alignEnd="@id/qualPointsLabel"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/cumQualPtsTxt"
        android:layout_height="wrap_content"
        android:text="Transcript Credits:"
        android:id="@+id/transCreditsLabel"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@id/transCreditsLabel"
        />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/transCreditsTxt"
        android:textSize="22sp"
        android:layout_below="@id/cumQualPtsTxt"
        android:layout_alignRight="@id/cumQualPtsTxt"
        android:layout_alignEnd="@id/cumQualPtsTxt"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:hint="0"
        android:inputType="number"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/transCreditsLabel"
        android:layout_height="wrap_content"
        android:text="Transcript Quality Points:"
        android:id="@+id/transQualPointsLabel"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/transQualPointsTxt"
        android:textSize="22sp"
        android:layout_below="@id/transCreditsTxt"
        android:layout_alignRight="@id/transCreditsTxt"
        android:layout_alignEnd="@id/transCreditsTxt"
        android:gravity="end"
        android:hint="0"
        android:inputType="number"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Cumulative GPA"
        android:id="@+id/calcCumGPA"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/transQualPointsTxt"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"

        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneViewing"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />


</RelativeLayout>